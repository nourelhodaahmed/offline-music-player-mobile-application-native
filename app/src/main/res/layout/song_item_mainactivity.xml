<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:padding="@dimen/H2_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/perant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_gorund_white"
        android:padding="@dimen/H2_padding">

        <ImageView
            android:id="@+id/image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/music"
            android:layout_marginEnd="@dimen/H2_padding"
            app:layout_constraintTop_toTopOf="@id/perant"
            app:layout_constraintLeft_toLeftOf="@id/perant" />

        <TextView
            android:id="@+id/song_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="song name"
            android:textSize="@dimen/H3_text_size"
            android:textColor="@color/H2_text_color"
            app:layout_constraintHorizontal_bias="0"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/H2_padding"
            app:layout_constraintTop_toTopOf="@id/perant"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintEnd_toStartOf="@id/more_button"/>

        <ImageButton
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/_more_vert_"
            android:background="@drawable/music_icons"
            app:layout_constraintTop_toTopOf="@id/perant"
            app:layout_constraintEnd_toEndOf="@id/perant"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>


